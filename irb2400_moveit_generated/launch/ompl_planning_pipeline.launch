<?xml version="1.0"?>
<launch>
  <!-- arguments -->
  <arg name="use_industrial_filters" default="False"/>

  <!-- OMPL Plugin for MoveIt! -->
  <arg name="planning_plugin" value="ompl_interface/OMPLPlanner" />

  <!-- The request adapters (plugins) used when planning with OMPL. 
       ORDER MATTERS -->

  <arg if="$(arg use_industrial_filters)" name="planning_adapters" value="	industrial_trajectory_filters/NPointFilter
					industrial_trajectory_filters/UniformSampleFilter
					default_planner_request_adapters/AddTimeParameterization
				       default_planner_request_adapters/FixWorkspaceBounds
				       default_planner_request_adapters/FixStartStateBounds
				       default_planner_request_adapters/FixStartStateCollision
				       default_planner_request_adapters/FixStartStatePathConstraints" />

  <arg unless="$(arg use_industrial_filters)" name="planning_adapters" value="default_planner_request_adapters/AddTimeParameterization
				       default_planner_request_adapters/FixWorkspaceBounds
				       default_planner_request_adapters/FixStartStateBounds
				       default_planner_request_adapters/FixStartStateCollision
				       default_planner_request_adapters/FixStartStatePathConstraints" />


  <arg name="start_state_max_bounds_error" value="0.1" />  

  <!-- moveit default planning adapter parameters -->
  <param name="planning_plugin" value="$(arg planning_plugin)" />
  <param name="request_adapters" value="$(arg planning_adapters)" />
  <param name="start_state_max_bounds_error" value="$(arg start_state_max_bounds_error)" />
  <param name="max_sampling_attempts" value="40" /><!-- default_planner_request_adapters/AddTimeParameterization Parameter -->


  <!-- ros industrial trajectory filter parameters -->
  <param name="n_points" value="100" /> <!-- NPointFilter Parameter -->
  <param name="sample_duration" value="0.050" /> <!-- UniformSampleFilter Parameter -->

  <rosparam command="load" file="$(find irb2400_moveit_generated)/config/kinematics.yaml"/>
  <rosparam command="load" file="$(find irb2400_moveit_generated)/config/ompl_planning.yaml"/>

</launch>
